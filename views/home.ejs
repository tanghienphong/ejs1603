
<%- include('header') %>    
<div class="col-md-12">    
<a href="./add-singer" class="btn btn-success">Add New</a>
</div>
<div class="col-md-12">
<h1 class="text-center">List Singers</h1>
<table class="table table-striped">
<thead>
  <tr>
    <th scope="col">#</th>
    <th scope="col">Avatar</th>
    <th scope="col">Name</th>
    <th scope="col">Link</th>
    <th scope="col">Action</th>
  </tr>
</thead>
<tbody>
<% arraySinger.forEach(Singer => { %>
<tr>
<th scope="row"><%- Singer.id%></th>
<td><img src="<%- Singer.avatar %>" alt="<%- Singer.name %>" class="img-fluid"></td>
<td><%- Singer.name %></td>
<td><a href="<%- Singer.link%>"><%- Singer.link%></a></td>
<td>
<a href="/update/<%- Singer.id %>" class="btn btn-primary">Update</a>
<a href="/delete/<%- Singer.id %>" class="btn btn-warning" onClick="javascript:return confirm('Are you sure ?')">Delete</a>
</td>
</tr>
<%} ) %>  
</tbody>
</table>        
</div>
<%- include('footer')%>
